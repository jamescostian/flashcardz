#!/usr/bin/env node
var program = require('commander')

program
	.version(require('../package.json').version)
	.usage('[command] [options]')
	.command('import <file> <name> <format>', 'import a stack of cards')
	.command('quiz <name>', 'get quized on a stack')
	.command('ls', 'list all stacks')
	.command('rm [names...]', 'remove 1+ stack(s)')
	.command('mv <oldname> <newname>', 'rename a stack')
	.command('cp <stackname> <newstackname>', 'copy a stack')
	.command('hardest [name]', 'see the hardest card in a stack (JSON)')
	.command('easiest [name]', 'see the easiest card in a stack (JSON)')
	.parse(process.argv)
