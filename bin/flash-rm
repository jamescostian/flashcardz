#!/usr/bin/env node
var program = require('commander')

program
	.version(require('../package.json').version)
	.usage('[options] [names...]')
	.option('-p, --path [dir]', 'Path where flashcardz are [~/.flashcardz]', '~/.flashcardz')
	.parse(process.argv)

if (program.args.length < 1) {
	console.error('No stacks were removed')
	process.exit()
}
else {
	var f = require('../lib/module.js')({path: program.path})
	f.refresh()
	program.args.forEach(function (name) {
		delete f.stacks[name]
	})
	f.save()
}
