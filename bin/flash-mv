#!/usr/bin/env node
var program = require('commander')

program
	.version(require('../package.json').version)
	.usage('[options] <oldname> <newname>')
	.option('-p, --path [dir]', 'Path where flashcardz are [~/.flashcardz]', '~/.flashcardz')
	.parse(process.argv)

if (program.args.length !== 2) {
	console.error('You must provide the stack\'s old name as well as its new name!')
	process.exit()
}
else {
	var f = require('../lib/module.js')({path: program.path})
	f.refresh()
	f.insertStack(program.args[1], f.getStack(program.args[0]))
	delete f.stacks[program.args[0]]
	f.save()
}
